#include <iostream>

using namespace std;

int factorial(int n) {
    if (n == 0) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

int main() {
    int N;
    double SF = 0;

    cout << "Ingrese el valor de N: ";
    cin >> N;

    for (int i = 1; i <= N; i++) {
        SF += factorial(2 * i);
    }

    cout << "La sumatoria de los primeros " << N << " tÃ©rminos es: " << SF << endl;

    return 0;
}
