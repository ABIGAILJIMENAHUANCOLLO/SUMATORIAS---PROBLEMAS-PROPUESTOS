#include <iostream>

using namespace std;

int main() {
    int rows = 10; // Number of rows in the tree

    // Print the tree
    for (int i = 1; i <= rows; i++) {
        // Print spaces before the stars
        for (int j = 1; j <= rows - i; j++) {
            cout << " ";
        }
        // Print stars
        for (int k = 1; k <= 2 * i - 1; k++) {
            cout << "*";
        }
        cout << endl;
    }

    // Print the trunk
    for (int i = 1; i <= 2; i++) {
        // Print spaces before the stars
        for (int j = 1; j <= rows - 2; j++) {
            cout << " ";
        }
        // Print stars
        for (int k = 1; k <= 3; k++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
