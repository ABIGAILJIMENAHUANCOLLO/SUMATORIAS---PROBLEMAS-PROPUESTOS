#include <iostream>

using namespace std;

int main() {
    int N;
    double sum = 0;

    cout << "Ingrese la cantidad de números (N): ";
    cin >> N;

    cout << "Ingrese " << N << " números: " << endl;
    for (int i = 0; i < N; i++) {
        double num;
        cin >> num;
        sum += num;
    }

    double average = sum / N;
    cout << "El promedio de los " << N << " números es: " << average << endl;

    return 0;
}
